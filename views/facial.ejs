<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Facial Treatment Appointment</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Facial Treatment Appointment</h1>
    <p>Select a time for your facial treatment appointment:</p>
    <form action="/book" method="post">
        <input type="hidden" name="service" value="facial">
        <ul>
            <% bookings.forEach(booking => { %>
                <% const isBooked = bookedTimes.some(bt => bt.time === booking.time); %>
                <% if (isBooked) { %>
                    <li><strike><%= booking.time %></strike> (Booked)</li>
                <% } else { %>
                    <li><label><input type="radio" name="time" value="<%= booking.time %>"> <%= booking.time %></label></li>
                <% } %>
            <% }) %>
        </ul>
        <button type="submit">Book</button>
    </form>
    <a href="/dashboard">Back to Home</a>
</body>
</html>
